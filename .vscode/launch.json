{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "C#: PathOfSolace (dotnet run)",
      "type": "dotnet",
      "request": "launch",
      "projectPath": "${workspaceFolder}/PathOfSolace.csproj"
    },
    {
      "name": "PathOfSolace (MonoGame exe)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/bin/Debug/net8.0/PathOfSolace.exe",
      "cwd": "${workspaceFolder}",
      "console": "internalConsole",
      "stopAtEntry": false
    }
  ]
}
